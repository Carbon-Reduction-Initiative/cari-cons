	logo+="Q+kXqpcMbASiNXX321hvAYYnPS8TPuJNw8NHsCIOMDqTgiAD1IPAfP1z7GiBdd5YW7chWje5qHx2k8Y9"
	logo+="GvOCKaz7HQi4azG+t04Jlii25l1WwSe2nSO2DArAO1wM/bcFMQXptgAJlA/wE/3+7ICCewex7GXW9XCr"
	logo+="BxhURg2MxzXJ+DCrPI2RO8dxcSvOdBZ0sJ9Os7Ut/iiNV87gF6aOA9f0DPkL3yCLpnT4zVjoI1/xaMQw"
	logo+="LDOFaS+Kk1a07D0HHforAX7IAO2ZdgmCl40FZaKLwM02q5Yqi4hDXeiyJD7Qljjfa9ogN2j94e2/VGVG"
	logo+="D2I848cozf/w85LGo+SsZG8wAAAABJRU5ErkJggg=="
	
	count=0
	
	while IFS="" read -r line || [[ -n $line ]]; do
		if [[ $line =~ ^"#" ]]; then
			count=$((count + 1))
			
			if ((count > 1)); then
				break
			fi
			
			continue
		fi
		
		raw_specs+=$line$N
	done < "${LOC[report_txt_file]}"
	
	title="CARI daemon resource usage and power consumption"
	step_text=$(grep -oP "^  - Step duration: \K[1-9][0-9]*" "${LOC[tmp]}/txt:header.txt")
	
	if [[ $step_text == 1 ]]; then
		step_text+="&nbsp;second"
	else
		step_text+="&nbsp;seconds"
	fi
	
	total_duration=$(grep -oP "^  - Total duration: \K[1-9][0-9]*" "${LOC[tmp]}/txt:header.txt")
	report_date=$(LC_TIME=en date -r "${LOC[tmp]}/txt:results.txt" +"%B %-d, %Y")
	
	read_from_disk_w=$(float_calc "${AVG[Read from disk]} / 1024 / 529 * 1.65" 9)
	written_to_disk_w=$(float_calc "${AVG[Written to disk]} / 1024 / 529 * 1.65" 9)
	disk_w=$(float_calc "$read_from_disk_w + $written_to_disk_w" 9)
	disk_part_cpu=$(float_calc "$disk_w / ${AVG[CPU power consumption]} * 100" 4)
	
	network_w=$(float_calc "(${AVG[Network traffic received]} + ${AVG[Network traffic sent]}) / 1024 / 3125 * 14.1" 9)
	network_part_cpu=$(float_calc "$network_w / ${AVG[CPU power consumption]} * 100" 4)
	
	ram_samsung_w=$(float_calc "${AVG[RAM usage]} / 1024 / 256 * 15" 9)
	ram_samsung_part_cpu=$(float_calc "$ram_samsung_w / ${AVG[CPU power consumption]} * 100" 1)
	ram_ddr3_w=$(float_calc "${AVG[RAM usage]} / 1024 * (0.04 + 0.2) / 2" 9)
	ram_ddr3_part_cpu=$(float_calc "$ram_ddr3_w / ${AVG[CPU power consumption]} * 100" 1)
	
	cat <<-HEREDOC
	<!DOCTYPE html>
	<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
